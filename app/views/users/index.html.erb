<% content_for :head do %>
  <%= stylesheet_link_tag 'dataTables.responsive', 'data-turbolinks-eval' => false %>
  <%= stylesheet_link_tag 'dataTables.bootstrap', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'dataTables.bootstrap.min', 'data-turbolinks-eval' => true %>
<% end %>

<div class="row">
<div class="col-lg-12">
    <h1 class="page-header">用户管理</h1>
</div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                用户列表
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>账号</th>
                                <th>密码</th>
                                <th>昵称</th>
                                <th>金币数</th>
                                <th>类型</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @users.each do |user| %>
                          <tr class="odd gradeX">
                              <td><%= user.account %></td>
                              <td><%= user.password %></td>
                              <td><%= user.nickname %></td>
                              <td><%= user.coin %></td>
                              <% if(user.level == 1) %>
                              <td>管理员</td>
                              <% else %>
                              <td>普通用户</td>
                              <% end %>
                              <td><%= link_to '编辑', edit_user_path(user) %></td>
                              <td><%= link_to '删除', user_path(user), method: :delete, data: {confirm: '确认删除?'} %></td>
                          </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

