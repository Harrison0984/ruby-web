<% content_for :head do %>
  <%= stylesheet_link_tag 'dataTables.responsive', 'data-turbolinks-eval' => false %>
  <%= stylesheet_link_tag 'dataTables.bootstrap', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'dataTables.bootstrap.min', 'data-turbolinks-eval' => true %>
<% end %>

<div class="row">
<div class="col-lg-12">
    <h1 class="page-header">日志管理</h1>
</div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                九宫格日志
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>期数</th>
                                <th>数据</th>
                                <th>时间</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @grids.each do |log| %>
                          <tr>
                              <td><%= log.id %></td>
                              <td><% if log.x1 <= 13 %><font color="#5B00AE"><% elsif log.x1 > 13 and log.x1 <= 26 %>
                              <font color="#00A600"><% elsif log.x1 > 26 and log.x1 <= 39 %>
                              <font color="#BB3D00"><% else %><font color="#9F4D95"><% end %>
                              <%= (log.x1%13+1).to_s.rjust(2, '0') %></font>
                              <% if log.x2 <= 13 %><font color="#5B00AE"><% elsif log.x2 > 13 and log.x2 <= 26 %>
                              <font color="#00A600"><% elsif log.x2 > 26 and log.x2 <= 39 %>
                              <font color="#BB3D00"><% else %><font color="#9F4D95"><% end %>
                              <%= (log.x2%13+1).to_s.rjust(2, '0') %></font>
                              <% if log.x3 <= 13 %><font color="#5B00AE"><% elsif log.x3 > 13 and log.x3 <= 26 %>
                              <font color="#00A600"><% elsif log.x3 > 26 and log.x3 <= 39 %>
                              <font color="#BB3D00"><% else %><font color="#9F4D95"><% end %>
                              <%= (log.x3%13+1).to_s.rjust(2, '0') %></font><br>
                              <% if log.y1 <= 13 %><font color="#5B00AE"><% elsif log.y1 > 13 and log.y1 <= 26 %>
                              <font color="#00A600"><% elsif log.y1 > 26 and log.y1 <= 39 %>
                              <font color="#BB3D00"><% else %><font color="#9F4D95"><% end %>
                              <%= (log.y1%13+1).to_s.rjust(2, '0') %></font>
                              <% if log.y2 <= 13 %><font color="#5B00AE"><% elsif log.y2 > 13 and log.y2 <= 26 %>
                              <font color="#00A600"><% elsif log.y2 > 26 and log.y2 <= 39 %>
                              <font color="#BB3D00"><% else %><font color="#9F4D95"><% end %>
                              <%= (log.y2%13+1).to_s.rjust(2, '0') %></font>
                              <% if log.y3 <= 13 %><font color="#5B00AE"><% elsif log.y3 > 13 and log.y3 <= 26 %>
                              <font color="#00A600"><% elsif log.y3 > 26 and log.y3 <= 39 %>
                              <font color="#BB3D00"><% else %><font color="#9F4D95"><% end %>
                              <%= (log.y3%13+1).to_s.rjust(2, '0') %></font><br>
                              <% if log.z1 <= 13 %><font color="#5B00AE"><% elsif log.z1 > 13 and log.z1 <= 26 %>
                              <font color="#00A600"><% elsif log.z1 > 26 and log.z1 <= 39 %>
                              <font color="#BB3D00"><% else %><font color="#9F4D95"><% end %>
                              <%= (log.z1%13+1).to_s.rjust(2, '0') %></font>
                              <% if log.z2 <= 13 %><font color="#5B00AE"><% elsif log.z2 > 13 and log.z2 <= 26 %>
                              <font color="#00A600"><% elsif log.z2 > 26 and log.z2 <= 39 %>
                              <font color="#BB3D00"><% else %><font color="#9F4D95"><% end %>
                              <%= (log.z2%13+1).to_s.rjust(2, '0') %></font>
                              <% if log.z3 <= 13 %><font color="#5B00AE"><% elsif log.z3 > 13 and log.z3 <= 26 %>
                              <font color="#00A600"><% elsif log.z3 > 26 and log.z3 <= 39 %>
                              <font color="#BB3D00"><% else %><font color="#9F4D95"><% end %>
                              <%= (log.z3%13+1).to_s.rjust(2, '0') %></font></td>
                              <td><%= log.time %></td>
                          </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

