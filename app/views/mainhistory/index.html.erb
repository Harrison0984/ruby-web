<% content_for :head do %>
  <%= stylesheet_link_tag 'sb-admin-2', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'metisMenu.min', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'sb-admin-2', 'data-turbolinks-eval' => true %>
  <%= stylesheet_link_tag 'dataTables.responsive', 'data-turbolinks-eval' => false %>
  <%= stylesheet_link_tag 'dataTables.bootstrap', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'dataTables.bootstrap.min', 'data-turbolinks-eval' => true %>
<% end %>

<% content_for :script do %>
$(document).ready(function () {
    $('#dataTables-example').DataTable({
                  responsive: true
          });
});
<% end %>

<section id="intro" class="intro">
<div class="middlePage">
   <div class="panel panel-info">
      <div class="panel-body">
      <div class="container">
        <div class="row">
            <div class="col-md-11">
                <div class="panel-body">
                </div>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                          <tr>
                            <th>期数</th>
                            <th>模式</th>
                            <th>位置</th>
                            <th>金币</th>
                            <th>状态</th>
                            <th>时间</th>
                          </tr>
                        </thead>
                        <tbody>
                        <% @tracelogs.each do |log| %>
                        <% if log.status == 1 %>
                          <tr class="success">
                        <% else %>
                          <tr>
                        <% end %>
                        <td><%= log.gameid %></td>
                        <% if log.gametype == 1 %>
                          <td>豹子</td>
                        <% elsif log.gametype == 2 %>
                          <td>顺子</td>
                        <% elsif log.gametype == 3 %>
                          <td>小</td>
                        <% elsif log.gametype == 4 %>
                          <td>大</td>
                        <% elsif log.gametype == 5 %>
                          <td>清色</td>
                        <% else %>
                          <td>error</td>
                        <% end %>
                        <% if log.pos == 1 %>
                          <td>横一</td>
                        <% elsif log.pos == 2 %>
                          <td>横二</td>
                        <% elsif log.pos == 3 %>
                          <td>横三</td>
                        <% elsif log.pos == 4 %>
                          <td>纵一</td>
                        <% elsif log.pos == 5 %>
                          <td>纵二</td>
                        <% elsif log.pos == 6 %>
                          <td>纵三</td>
                        <% else %>
                          <td>error</td>
                        <% end %>
                        <td><%= log.coin %></td>
                        <td><% if log.status == 0 %>未开奖<%elsif log.status == 1 %>恭喜中奖<% else %> 未中 <% end %></td>
                        <td><%= log.time %></td>
                        </tr>
                        <% end %>                        
                        </tbody>
                    </table>
                  </div>
                  </div>
              </div>
          </div>
      </div>
   </div>
</section>
