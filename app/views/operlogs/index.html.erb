<% content_for :head do %>
  <%= stylesheet_link_tag 'dataTables.responsive', 'data-turbolinks-eval' => false %>
  <%= stylesheet_link_tag 'dataTables.bootstrap', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'dataTables.bootstrap.min', 'data-turbolinks-eval' => true %>
<% end %>

<div class="row">
<div class="col-lg-12">
    <h1 class="page-header">日志管理</h1>
</div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                操作日志
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>管理员</th>
                                <th>用户</th>
                                <th>金币</th>
                                <th>动作</th>
                                <th>时间</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @operlogs.each do |operlog| %>
                          <% if (operlog.coin > 0) %>
                          <tr class="success">
                          <% elsif (operlog.coin) == 0 %>
                          <tr class="danger" >
                          <% else %>
                          <tr class="info">
                          <% end %>
                              <td><%= operlog.maname %></td>
                              <td><%= operlog.username %></td>
                              <td><%= operlog.coin %></td>
                              <td><%= operlog.action %></td>
                              <td><%= operlog.time %>
                          </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

