<table class="lot-table" style="width:100%" id="tblprint">
    <tbody>
        <tr>
            <td colspan="2"><%=@gameid%>期</td>
        </tr>
        <% for info in @result %>
        <tr>
            <td rowspan="2">注单号</td>
            <td>项目:<%=info["pos"]%></td>
        </tr>
        <tr>
            <td>牌面:<%if info["gametype"]==1%>A<%elsif info["gametype"] < 10%><%=info["gametype"]%>
            <%elsif info["gametype"]==11%>J<%elsif info["gametype"]==12%>Q<%elsif info["gametype"]==13%>K<%end%></td>
        </tr>
        <tr>
            <td>下注额:</td>
            <td><%=info["coin"]%></td>
        </tr>
        <tr>
            <td>可赢额:</td>
            <td><%=info["award"]%></td>
        </tr>
        <% end %>
        <tr>
            <td>总计注额</td>
            <td><%if @totalcoin %><%=@totalcoin%><% end %></td>
        </tr>
    </tbody>
</table>
