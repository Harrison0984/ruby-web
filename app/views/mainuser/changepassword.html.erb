<div id="main">
    <div id="theme_fb">
        <h2>修改密码</h2>
    </div>

    <div class="fb_ft">
        <%= form_for @user, url: {action: "updatedetail"}, mothod: :post do |f| %>
		<% if @user.errors.any? %>
		  <div id="error_explanation">
		    <h2><%= pluralize(@user.errors.count, "error") %>:</h2>
		    <ul>
		    <% @user.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		    <% end %>
		    </ul>
		  </div>
		<% end %>

            <table>
                <tbody>
                    <tr>
                        <td align="right">
                            <strong class="imp_star">*</strong>当前密码：
                        </td>
                        <td align="left">
				    		<%= f.password_field :password, :size => "10", placeholder:"当前密码" %>
                        </td>
                    </tr>
                    <tr>
                        <td align="right">
                            <strong class="imp_star">*</strong>新密码：
                        </td>
                        <td align="left">
                            <%= f.password_field :password, :size => "10", placeholder:"新密码" %>
                        </td>
                    </tr>
                    <tr>
                        <td align="right">
                            <strong class="imp_star">*</strong>确认密码：
                        </td>
                        <td align="left">
                            <%= f.password_field :password, :size => "10", placeholder:"确认密码" %>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" align="center">
            			    <%= f.submit '修改密码', class:"button", data: {confirm: '确认修改数据?'} %>
            			    <% end %>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </form>
    </div>
</div>