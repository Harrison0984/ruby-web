<div id="main">
    <div id="theme_fb">
        <h2>修改资料</h2>
    </div>

    <div class="fb_ft">
        <%= form_for :mainuser, url: {action: "updatedetail"}, method: :post do |f| %>
		<% if @errors %>
		  <div id="error_explanation">
		    <ul>
		      <li><%= @errors %></li>
		    </ul>
		  </div>
		<% end %>

            <table>
                <tbody>
                    <tr>
                        <td align="right">
                            <strong class="imp_star">*</strong>用户昵称：
                        </td>
                        <td align="left">
				    		<%= f.text_field :nickname, :size => "10", placeholder:"昵称", value:@user.nickname%>
                        </td>
                    </tr>
                    <tr>
                        <td align="right"><strong class="imp_star">*</strong>联系方式：
                        </td>
                        <td align="left">
                            <input type="text" maxlength="50" id="txtcontact" style="width: 200px;" />
                            <span class="note_must" id="spcontact"></span>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" align="center">
            			    <%= f.submit '修改资料', class:"button", data: {confirm: '确认修改数据?'} %>
            			    <% end %>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </form>
    </div>
</div>