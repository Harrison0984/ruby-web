<% content_for :head do %>
  <%= stylesheet_link_tag 'dataTables.responsive', 'data-turbolinks-eval' => false %>
  <%= stylesheet_link_tag 'dataTables.bootstrap', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'dataTables.bootstrap.min', 'data-turbolinks-eval' => true %>
<% end %>

<div class="row">
<div class="col-lg-12">
    <h1 class="page-header"></h1>
</div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                报表查询
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>用户</th>
                                <th>期数</th>
                                <th>类型</th>
                                <th>位置</th>
                                <th>金币</th>
                                <th>结果</th>
                                <th>时间</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @tracelogs.each do |log| %>
                          <tr>
                              <td><%= log.useraccount %></td>
                              <td><%= log.gameid %></td>
                              <% if log.maintype == 1 %>
                              <% if log.gametype == 1 %>
                                <td>三筒</td>
                              <% elsif log.gametype == 2 %>
                                <td>顺子</td>
                              <% elsif log.gametype == 3 %>
                                <td>同花</td>
                              <% else %>
                                <td>对子</td>
                              <% end %>
                              <% elsif log.maintype == 3 %>
                              <% if log.gametype == 1 %>
                                <td>大</td>
                              <% elsif log.gametype == 2 %>
                                <td>和</td>
                              <% elsif log.gametype == 3 %>
                                <td>小</td>
                              <% end %>
                              <% else %>
                                <% if log.gametype == 1 %>
                                <td>A</td>
                                <% elsif log.gametype <= 10 %>
                                <td><%=log.gametype%></td>
                                <% elsif log.gametype == 11 %>
                                <td>J</td>
                                <% elsif log.gametype == 12 %>
                                <td>Q</td>
                                <% elsif log.gametype == 13 %>
                                <td>K</td>
                                <% end %>
                              <% end %>
                              <% if log.maintype == 1 %>
                              <% if log.pos == 1 %>
                                <td>横一</td>
                              <% elsif log.pos == 2 %>
                                <td>横二</td>
                              <% elsif log.pos == 3 %>
                                <td>横三</td>
                              <% elsif log.pos == 4 %>
                                <td>纵一</td>
                              <% elsif log.pos == 5 %>
                                <td>纵二</td>
                              <% elsif log.pos == 6 %>
                                <td>纵三</td>
                              <% end %>
                              <% else %>
                              <td><%=log.pos%></td>
                              <% end %>
                              <% if log.status == 1 %>
                              <td><font color="red">+<%= log.coin * log.mulbability %></font></td>
                              <% else %>
                              <td>-<%= log.coin %></td>
                              <% end %>
                              <td><% if log.status == 0 %>未开奖<%elsif log.status == 1 %>恭喜中奖<% else %> 未中奖 <% end %></td>
                              <td><%= log.time %></td>
                          </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

