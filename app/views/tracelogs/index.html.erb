<% content_for :head do %>
  <%= stylesheet_link_tag 'dataTables.responsive', 'data-turbolinks-eval' => false %>
  <%= stylesheet_link_tag 'dataTables.bootstrap', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-eval' => true %>
  <%= javascript_include_tag 'dataTables.bootstrap.min', 'data-turbolinks-eval' => true %>
<% end %>

<div class="row">
<div class="col-lg-12">
    <h1 class="page-header">日志管理</h1>
</div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                用户日志
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>用户</th>
                                <th>期数</th>
                                <th>类型</th>
                                <th>位置</th>
                                <th>金币</th>
                                <th>状态</th>
                                <th>时间</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @tracelogs.each do |log| %>
                        <% if log.status == 1 %>
                          <tr class="warning">
                        <% else %>
                          <tr class="info">
                        <% end %>
                              <td><%= log.useraccount %></td>
                              <td><%= log.gameid %></td>
                              <% if log.gametype == 1 %>
                                <td>same</td>
                              <% elsif log.gametype == 2 %>
                                <td>order</td>
                              <% elsif log.gametype == 3 %>
                                <td>small</td>
                              <% elsif log.gametype == 4 %>
                                <td>big</td>
                              <% elsif log.gametype == 5 %>
                                <td>color</td>
                              <% else %>
                                <td>error</td>
                              <% end %>
                              <% if log.pos == 1 %>
                                <td>横一</td>
                              <% elsif log.pos == 2 %>
                                <td>横二</td>
                              <% elsif log.pos == 3 %>
                                <td>横三</td>
                              <% elsif log.pos == 4 %>
                                <td>纵一</td>
                              <% elsif log.pos == 5 %>
                                <td>纵二</td>
                              <% elsif log.pos == 6 %>
                                <td>纵三</td>
                              <% else %>
                                <td>error</td>
                              <% end %>
                              <td><%= log.coin %></td>
                              <td><% if log.status == 0 %>未开奖<%elsif log.status == 1 %>中奖<% else %> 未中奖 <% end %></td>
                              <td><%= log.time %></td>
                          </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

