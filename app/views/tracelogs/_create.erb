<% if @error %>
  <div class="alert alert-success page-alert" id="alert-1">
      <button type="button" class="close"><span class="sr-only">Close</span></button>
      <%= @error %>
  </div>
<% end %>
<table class="table table-striped table-bordered table-hover">
<thead>
  <tr>
      <th>编号</th>
      <th>位置</th>
      <th>模式</th>
      <th>金币</th>
  </tr>
</thead>
<tbody>
  <% if @tracelogs %>
  <% @tracelogs.each do |log| %>
  <tr>
      <td><%= log.id %></td>
      <% if log.pos == 1 %>
          <td>横一</td>
        <% elsif log.pos == 2 %>
          <td>横二</td>
        <% elsif log.pos == 3 %>
          <td>横三</td>
        <% elsif log.pos == 4 %>
          <td>纵一</td>
        <% elsif log.pos == 5 %>
          <td>纵二</td>
        <% elsif log.pos == 6 %>
          <td>纵三</td>
        <% else %>
          <td>error</td>
      <% end %>
      <% if log.gametype == 1 %>
          <td>豹子</td>
        <% elsif log.gametype == 2 %>
          <td>顺子</td>
        <% elsif log.gametype == 3 %>
          <td>小牌</td>
        <% elsif log.gametype == 4 %>
          <td>大牌</td>
        <% elsif log.gametype == 5 %>
          <td>同色</td>
        <% else %>
          <td>error</td>
      <% end %>
      <td><%= log.coin %></td>
  </tr>
  <% end %>
  <% end %>
</tbody>
</table>